# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here # might use GROQ free
OPENAI_MODEL=gpt-4-turbo-preview

# Groq Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=qwen/qwen3-32b
GROQ_INTENT_CLASSIFIER_MODEL=llama-3.1-8b-instant

# Feed API
COINGECKO_API_KEY=your_coingecko_api_key_here # only needed if pro account is used
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here
MESSARI_API_KEY=your_messari_api_key_here
COINCAP_API_KEY=your_coincap_api_key_here

# Fear & Greed Index (no key needed - free API)
FEAR_GREED_API_URL=https://api.alternative.me/fng/

# Redis Configuration (optional - for caching)
REDIS_HOST=your-redis-cloud-host.redislabs.com
REDIS_PORT=19430
REDIS_PASSWORD=your_redis_cloud_password
REDIS_USERNAME=default
REDIS_SSL=false
REDIS_DB=0
REDIS_ENABLED=true

# Cache Settings
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=INFO
CHATBOT_LOG_FILE=/path/to/your.log # defaults to /chatbot.log
HISTORY_DB_PATH=/path/to/db.db # defaults to /data/chat_history.db
HISTORY_CONTEXT_LIMIT=20 # defaults to 20, Increase/decrease to control how many past messages get pulled in when the user references relative time (“yesterday”, etc.).

# Evaluation
EVALUATION_THRESHOLD=0.7 # defaults to 0.7 
MAX_REVISIONS=2 # defaults to 2: re-generation count for enhancing the response
